<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recyclerview_height">

    <TextView
        android:id="@+id/str_board_idx"
        android:layout_width="@dimen/board_item_id_width"
        android:layout_height="@dimen/board_item_id_height"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_board_view"
        android:layout_width="@dimen/board_item_btn_width"
        android:layout_height="@dimen/board_item_btn_height"
        android:layout_marginEnd="1dp"
        android:text="보기"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/str_board_title"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Board_Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toStartOf="@+id/btn_board_view"
        app:layout_constraintStart_toEndOf="@+id/str_board_idx"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/str_board_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="nickname"
        app:layout_constraintEnd_toStartOf="@+id/btn_board_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/str_board_idx"
        app:layout_constraintTop_toBottomOf="@+id/str_board_title" />
</android.support.constraint.ConstraintLayout>